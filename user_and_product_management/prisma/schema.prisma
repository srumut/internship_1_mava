generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "sqlite"
    url      = "file:../db/database.db"
}

model User {
    id       String @id
    username String @unique
    password String

    @@map("user")
}

model Product {
    id    String @id
    name  String
    stock Int

    @@map("product")
}

model Admin {
    id       String @id
    username String @unique
    password String

    @@map("admin")
}
